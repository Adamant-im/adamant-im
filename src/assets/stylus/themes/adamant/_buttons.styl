@import '~vuetify/src/stylus/settings/_colors.styl'

@import '_mixins.styl'
@import '../../settings/_colors.styl'

.a-btn-link
  font-size: 16px
  font-weight: 500
  text-decoration: underline
  text-transform: unset

.v-dialog--active .v-card__actions
  padding-bottom: 15px

.theme--light
  .a-btn-primary
    &:not(.v-btn--icon):not(.v-btn--flat)
      background-color: $shades.white
      color: $adm-colors.primary
    &.v-btn--disabled:not(.v-btn--icon):not(.v-btn--flat):not(.v-btn--outline)
      background-color: $shades.white !important
      color: $adm-colors.muted !important
  .a-btn-regular
    color: $adm-colors.regular

    &.v-btn--active:before
    &.v-btn:hover:before
    &.v-btn:focus:before
      background-color: $adm-colors.secondary2
      opacity: 1

    &.v-btn.v-btn--disabled
      color: $adm-colors.muted !important
  .a-btn-link
    color: inherit

.theme--dark
  .a-btn-primary
    &:not(.v-btn--icon):not(.v-btn--flat)
      background-color: $adm-colors.primary
  .a-btn-link
    color: $shades.white
