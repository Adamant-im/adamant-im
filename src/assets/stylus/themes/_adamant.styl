@import '~vuetify/src/stylus/settings/_colors.styl'

/** ChatPreview.vue **/
.chat-preview
  .v-list__tile__title
    font-weight: 500

/** Chat.vue **/
.a-chat, .a-chat__content
  background-color: transparent !important

.chat
  box-shadow: none !important
  background-color: transparent !important

  .a-chat__message
    border-radius: 8px
    margin-bottom: 16px
  .a-chat__body-messages
    padding: 16px 16px 0 16px

.theme--light
  .chat
    .v-toolbar
      background-color: $grey.lighten-2

  .a-chat__message
    background-color: #FFF
    box-shadow: 0 1px 10px hsla(0,0%,39.2%,.06),0 1px 1px hsla(0,0%,39.2%,.04),0 2px 10px -1px hsla(0,0%,39.2%,.02)

    &:hover {
      background-color: $shades.white
    }

.theme--dark
  .a-chat__message
    background-color: #000
    box-shadow: 0 1px 10px hsla(0,0%,39.2%,.06),0 1px 1px hsla(0,0%,39.2%,.04),0 2px 10px -1px hsla(0,0%,39.2%,.02)

    &:hover {
      background-color: $shades.black
    }

/** AppToolbarCentered **/
.theme--light
  .app-toolbar-centered .v-toolbar
    background-color: $grey.lighten-2
.theme--dark
  .app-toolbar-centered .v-toolbar
    background-color: $shades.black

/** Options.vue **/
.options-page
  .v-input--selection-controls
    margin-top: 0

/** Buttons **/
.theme--light
  .v-btn.v-btn--primary:not(.v-btn--icon):not(.v-btn--flat)
    background-color: $shades.white
    color: $adm-colors.primary
.theme--dark
  .v-btn.v-btn--primary:not(.v-btn--icon):not(.v-btn--flat)
    background-color: $adm-colors.primary
