@import '~vuetify/src/stylus/settings/_variables.styl'
@import '../settings/_colors.styl'

/** Vuetify context styles **/

/**
 * BaseIcon.vue: Context styles
 *
 * 1. Inherit button color when icon inside VButton.
 * 2. Vuetify should not steal pieces of SVG icon.
 */
.v-btn .v-btn__content .svg-icon // [1]
  fill: currentColor
.v-btn--floating .v-btn__content .svg-icon :not(:only-child) // [2]
  &:last-child,
  &:first-child
    -webkit-backface-visibility: visible
    position: static
    left: auto
    top: auto
    opacity: 1
    -webkit-transform: none
    transform: none

/**
 * Vuetify container padding.
 */
@media $display-breakpoints.md-and-down
  .container
    padding: 20px

/**
 * Application styles.
 */
.application
  font-weight: 300

.theme--light.application
  color: $adm-colors.regular
